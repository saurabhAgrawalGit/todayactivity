<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".add_task">


    <TextView
        android:id="@+id/addtask"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="center"
        android:text="Add Your Task "
        android:textColor="#00C9C8"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="#00C9C8"
        android:id="@+id/taskname_et"
        android:hint="task name "
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="17"
        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtask" />

    <EditText
        android:textColor="#00C9C8"
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="17"
        android:inputType="textPersonName"
        android:hint="task name "
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskname_et" />

    <EditText
        android:textColor="#00C9C8"
        android:id="@+id/start_in"
        android:layout_width="152dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cat" />

    <EditText
        android:textColor="#00C9C8"
        android:id="@+id/endtime_in"
        android:layout_width="152dp"
        android:layout_height="56dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_in"
        app:layout_constraintTop_toBottomOf="@+id/cat" />

    <EditText
        android:textColor="#00C9C8"
        android:id="@+id/info"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_in" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="235dp"
        android:layout_height="76dp"
        android:text="Add Task"
        android:textSize="40dp"
        android:textColor="#EFEFEF"
        android:background="#00C9C8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />


</androidx.constraintlayout.widget.ConstraintLayout>
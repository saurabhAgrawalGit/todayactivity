    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:background="@drawable/timebox"
        android:gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingTop="5sp"
        android:paddingEnd="10dp"
        android:paddingBottom="5sp"
        android:text="11 : 00 PM"
        android:textColor="#FFFFFF"
        android:textSize="25dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:background="@drawable/timebox"
        android:gravity="center_horizontal"
        android:paddingStart="12dp"
        android:paddingTop="5sp"

        android:paddingEnd="12dp"
        android:paddingBottom="5sp"
        android:text="TO"
        android:textColor="#00C9C8"
        android:textSize="25dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/start_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/end_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:background="@drawable/timebox"

        android:gravity=""
        android:paddingStart="10dp"
        android:paddingTop="5sp"
        android:paddingEnd="10dp"
        android:paddingBottom="5sp"

        android:text="12 : 00 PM"
        android:textColor="#FFFFFF"
        android:textSize="25dp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toRightOf="@+id/to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:text="work  is to develop to anctivity "
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to" />


</androidx.constraintlayout.widget.ConstraintLayout>
